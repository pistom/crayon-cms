{% extends "base.html.twig" %}
{% block content %}
    <h1>Users</h1>

    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>User</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for key,user in users %}
            <tr {{ user.role == 'admin' ? 'class="admin"' : '' }}>
                <td>{{ loop.index }}.</td>
                <td><a href="user.edit.php?user={{ key }}">{{ key }}</a></td>
                <td>{% if user.role != 'admin' %}<a href="" data-action="delete" data-item="{{ key }}">Delete</a>{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfood>
            <tr>
                <td colspan="2"></td>
                <td><a href="user.edit.php">Add</a></td>
            </tr>
        </tfood>
    </table>





{% endblock %}

{% block scripts %}
    <script>
        document.body.addEventListener("click",function(e){
            if(e.target.dataset.action == 'delete'){
                atomic.post('user.delete.php','user='+e.target.dataset.item)
                    .success(function(data){
                        if(data.status == 'success')
                            showMessage('success','Done','Data has been saved');
                        if(data.status == 'error')
                            showMessage('error','Error','Data not saved');
                    })
                    .error(function(data){
                        showMessage('error','Error','Server error');
                    });
            }
        },false);
    </script>
{% endblock %}