{% set pageTitle = pageTitle is not defined ? '' : ' | '~pageTitle %}
{% set pageDescription = pageDescription is not defined ? 'My site' : pageDescription %}
<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta charset="utf-8">
    <title>{{ settings['site_name'] }}{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDescription }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ root }}/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ root }}/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ root }}/images/favicon-16x16.png">
    <link rel="manifest" href="{{ root }}/images/manifest.json">
    <link rel="mask-icon" href="{{ root }}/images/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="{{ root }}/images/favicon.ico">
    <meta name="msapplication-config" content="{{ root }}/images/browserconfig.xml">
    <meta name="theme-color" content="{{ settings['site_color'] }}">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i|Muli:400,600&amp;subset=latin-ext" rel="stylesheet">
    {% if assets %}
    <link rel="stylesheet" href="{{ root }}/dist/{{ assets['app.css'] }}">
    {% endif %}
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="{{ root }}/css/5ec-ie8.css">
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <script>window.html5 || document.write('<script src="{{ root }}/js/vendor/html5shiv.min.js"><\/script>')</script>
    <![endif]-->
</head>

<body class="{{ bodyClass }}">
<section class="mainHeader">
    <div class="mainHeader__bg"></div>
    <div class="container">
        <div id="brand" data-url="{{ root }}/" class="mainHeader__brand"></div>
        <div class="mainHeader__title">{{ settings['site_name'] }}</div>
        <div class="mainHeader__lang">
            {% include 'languageSwitcher.html.twig' with {'languages':languages} %}
        </div>
    </div>

</section>

<section class="mainNavigation">
    <nav class="container" id="mainNavigation">
        {% include 'navigation.html.twig' with {'menu':menu} %}
    </nav>
</section>
<section id="mainContentTitle">
        {% block contentTitle %}{% endblock %}
</section>

<section class="mainContent">
    <div id="mainContentLoader" class="isHidden spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
    </div>
    <div class="container" id="mainContent">
        {% block content %}{% endblock %}
    </div>
</section>

<section class="mainFooter">
    <div class="container">
        {% include 'navigation.html.twig' with {'menu':menu} %}
    </div>
</section>
<section class="mainCopyright">
    <div class="container">
        &copy; {{ settings['copyright'] }}
    </div>
</section>

<script src="{{ root }}/js/translation.js?lang={{ menu.lang }}"></script>
<script>
    var _root_ = "{{ root }}";
    var bodyIsLoaded = true;
</script>
{% if assets %}
    <script src="{{ root }}/dist/{{ assets['app.js'] }}"></script>
{% else %}
    <script src="http://localhost:8080/dist/app.js"></script>
{% endif %}

<script class="mainScripts">
    {% block scripts %}{% endblock %}
</script>


</body>
</html>
