{% extends template %}
{% block content %}
    {% for article in articles %}
        <h3><a href="/{{ article.slug }}" title="{{ article.title }}" data-ajax="true">{{ article.title }}</a></h3>
        <p>{{ article.publication_date }}</p>
        <hr>
    {% endfor %}

    {% for page in pagination  %}
        <a href="{{ page.url }}" data-ajax="true" title="{{ article.id }}" class="{{ currentPageNumber == page.page ? 'active' : '' }}">{{ page.page }}</a>
    {% endfor %}
{% endblock %}