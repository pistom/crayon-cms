<ul class="mainNavigation__list">

    {% set iterator = 1 %}
    {% for key,item in menu %}

        <li class="mainNavigation__listItem{{ (currentMatch == routes[key].controller~'#'~routes[key].function~'#'~routes[key].variables) ? " active" : ""  }}">
            {% if routes[key].blind == 'true' %}
                <span class="mainNavigation__listItemLink">{{ routes[key].name }}</span>
            {% else %}
                <a class="mainNavigation__listItemLink" href="{{ routes[key].path }}" data-ajax="true" title="{{ routes[key].name }}">{{ routes[key].name }}</a>
            {% endif %}
        {% if item|length > 1 %}
            <ul class="mainNavigation__subList">
            {% for key2,item2 in item %}
                {% if loop.index > 1 %}
                    <li class="mainNavigation__subListItem{{ (currentMatch == routes[key].controller~'#'~routes[key].function~'#'~routes[key].variables) ? " active" : ""  }}">
                        {% if routes[key2].blind == 'true' %}
                            <span class="mainNavigation__subListItemLink">{{ routes[key2].name }}</span>
                        {% else %}
                            <a class="mainNavigation__subListItemLink" href="{{ routes[key2].path }}" data-ajax="true" title="{{ routes[key2].name }}">{{ routes[key2].name }}</a>
                        {% endif %}
                    </li>
                {% endif %}
                {% set iterator = iterator+1 %}
            {% endfor %}
            </ul>
        {% endif %}
        </li>
        {% set iterator = iterator+1 %}
    {% endfor %}
</ul>